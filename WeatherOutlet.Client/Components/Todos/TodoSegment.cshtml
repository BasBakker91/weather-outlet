<div class="row my-2">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                @Todo.Name
            </div>
            <div class="card-body">
                <p class="card-text">@Todo.Description</p>

                @if (Todo.IsCompleted == false)
                {
                    <button onclick=@(() => OnMarkAsCompleted(Todo)) class="btn btn-success pull-right">Mark as completed</button>
                }
            </div>

            <div class="card-footer text-muted align-items-center">
                <span class="pull-left text-secondary">
                    Created at: @Todo.CreatedAt.ToShortDateString() @Todo.CreatedAt.ToShortTimeString()
                </span>

                @if (Todo.IsCompleted && Todo.CompletedAt != null)
                {
                    <span class="pull-right text-success">
                        Completed at: @Todo.CompletedAt?.ToShortDateString() @Todo.CompletedAt?.ToShortTimeString()
                    </span>
                }
            </div>

        </div>
    </div>
</div>

@functions {
    [Parameter] protected TodoItem Todo { get; set; }
    [Parameter] protected AppState.OnMarkTodoAsCompletedHandler OnMarkAsCompleted { get; set; }
}
